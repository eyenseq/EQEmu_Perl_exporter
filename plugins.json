{
  "plugins": [
    {
      "plugin_id": "say_to_client",
      "name": "Say To Client",
      "category": "Chat",
      "perl_template": "plugin::SayToClient($client, \"{message}\");",
      "params": [
        {
          "name": "message",
          "label": "Message",
          "type": "str",
          "default": "hi\nhello"
        }
      ]
    },
    {
      "plugin_id": "return_items",
      "name": "Return Items",
      "category": "Inventory",
      "perl_template": "plugin::return_items({returnitems});",
      "params": [
        {
          "name": "returnitems",
          "label": "Item Hash (usually \\%itemcount)",
          "type": "str",
          "default": "\\%itemcount"
        }
      ]
    },
    {
      "plugin_id": "check_hasitem",
      "name": "Check Has Item",
      "category": "Handin",
      "perl_template": "if (plugin::check_hasitem($client, {item_id})) {\n{body}\n}\n",
      "params": [
        {
          "name": "item_id",
          "label": "Item ID to check",
          "type": "int",
          "default": "1001"
        },
        {
          "name": "body",
          "label": "Body to execute when client has item",
          "type": "str",
          "default": "    quest::say(\"I see you have the item I requested.\");"
        }
      ]
    },
    {
      "plugin_id": "quest_handin",
      "name": "Quest Handin Helper",
      "category": "Handin",
      "perl_template": "plugin::quest_handin($client, \\%itemcount, {quest_id}, {reward_item}, {exp_amount});",
      "params": [
        {
          "name": "quest_id",
          "label": "Quest ID / Identifier (string or int)",
          "type": "str",
          "default": "\"epic_1_5_step_3\""
        },
        {
          "name": "reward_item",
          "label": "Reward Item ID",
          "type": "int",
          "default": "1001"
        },
        {
          "name": "exp_amount",
          "label": "Experience Reward (0 = none)",
          "type": "int",
          "default": "0"
        }
      ]
    },
    {
      "plugin_id": "random_message",
      "name": "Random Message",
      "category": "Flavor",
      "perl_template": "plugin::random_message($client, {messages});",
      "params": [
        {
          "name": "messages",
          "label": "Arrayref of messages (Perl code)",
          "type": "str",
          "default": "[\"Hello!\", \"Greetings, traveler.\", \"State your business.\"]"
        }
      ]
    },
    {
      "plugin_id": "RandomRoam",
      "name": "Random Roam",
      "category": "Movement",
      "perl_template": "plugin::RandomRoam({max_x}, {max_y}, {max_z}, {los_size});",
      "params": [
        {
          "name": "max_x",
          "label": "Max X variance",
          "type": "int",
          "default": "50"
        },
        {
          "name": "max_y",
          "label": "Max Y variance",
          "type": "int",
          "default": "50"
        },
        {
          "name": "max_z",
          "label": "Max Z variance",
          "type": "int",
          "default": "15"
        },
        {
          "name": "los_size",
          "label": "LoS mob size",
          "type": "int",
          "default": "5"
        }
      ]
    },
    {
      "plugin_id": "power_source_total_purity",
      "name": "Power Source Total Purity",
      "category": "Scaling",
      "perl_template": "my $total_purity = plugin::powersource_total_purity($client);",
      "params": []
    },
    {
      "plugin_id": "power_source_recalc",
      "name": "Power Source Recalc (On Zone-In)",
      "category": "Scaling",
      "perl_template": "plugin::powersource_recalc($client);",
      "params": []
    },
    {
      "plugin_id": "scale_npc_by_era",
      "name": "Scale NPC By Era",
      "category": "Scaling",
      "perl_template": "plugin::scale_npc_by_era($npc, {zone_short});",
      "params": [
        {
          "name": "zone_short",
          "label": "Zone shortname (optional, usually leave empty for auto)",
          "type": "str",
          "default": "\"\""
        }
      ]
    },
    {
      "plugin_id": "saylink",
      "name": "Saylink (Create)",
      "category": "Chat",
      "perl_template": "my $link = plugin::saylink({phrase}, 1); # 1 = underline",
      "params": [
        {
          "name": "phrase",
          "label": "Phrase for saylink",
          "type": "str",
          "default": "\"hail\""
        }
      ]
    },
    {
      "plugin_id": "say_check",
      "name": "Check Say Text (Simple)",
      "category": "Chat",
      "perl_template": "if (plugin::check_said($text, {match})) {\n{body}\n}\n",
      "params": [
        {
          "name": "match",
          "label": "Match text or regex (Perl fragment)",
          "type": "str",
          "default": "\"hail\""
        },
        {
          "name": "body",
          "label": "Body to execute on match",
          "type": "str",
          "default": "    quest::say(\"Well met, $name.\");"
        }
      ]
    },
    {
      "plugin_id": "faction_reward",
      "name": "Faction Reward",
      "category": "Reward",
      "perl_template": "plugin::FactionReward($client, {faction_id}, {amount});",
      "params": [
        {
          "name": "faction_id",
          "label": "Faction ID",
          "type": "int",
          "default": "42"
        },
        {
          "name": "amount",
          "label": "Faction change (+/-)",
          "type": "int",
          "default": "10"
        }
      ]
    },
    {
      "plugin_id": "give_exp",
      "name": "Grant Experience",
      "category": "Reward",
      "perl_template": "plugin::GiveEXP($client, {exp_amount});",
      "params": [
        {
          "name": "exp_amount",
          "label": "Experience Amount",
          "type": "int",
          "default": "1000"
        }
      ]
    },
    {
      "plugin_id": "give_cash",
      "name": "Give Cash",
      "category": "Reward",
      "perl_template": "plugin::GiveCash($client, {pp}, {gp}, {sp}, {cp});",
      "params": [
        {
          "name": "pp",
          "label": "Platinum",
          "type": "int",
          "default": "0"
        },
        {
          "name": "gp",
          "label": "Gold",
          "type": "int",
          "default": "0"
        },
        {
          "name": "sp",
          "label": "Silver",
          "type": "int",
          "default": "0"
        },
        {
          "name": "cp",
          "label": "Copper",
          "type": "int",
          "default": "0"
        }
      ]
    },
    {
      "plugin_id": "port_client",
      "name": "Port Client (Zone + Coords)",
      "category": "Utility",
      "perl_template": "plugin::PortClient($client, {zone_short}, {x}, {y}, {z}, {h});",
      "params": [
        {
          "name": "zone_short",
          "label": "Zone short name",
          "type": "str",
          "default": "\"poknowledge\""
        },
        {
          "name": "x",
          "label": "X",
          "type": "int",
          "default": "0"
        },
        {
          "name": "y",
          "label": "Y",
          "type": "int",
          "default": "0"
        },
        {
          "name": "z",
          "label": "Z",
          "type": "int",
          "default": "0"
        },
        {
          "name": "h",
          "label": "Heading",
          "type": "int",
          "default": "0"
        }
      ]
    },
    {
      "plugin_id": "hole_roamer_init",
      "name": "Hole Roamer \u2013 Init",
      "category": "Movement",
      "perl_template": "plugin::hole_roamer_init(\n    min_x          => {min_x},\n    max_x          => {max_x},\n    min_y          => {min_y},\n    max_y          => {max_y},\n    hole_min_x     => {hole_min_x},\n    hole_max_x     => {hole_max_x},\n    hole_min_y     => {hole_min_y},\n    hole_max_y     => {hole_max_y},\n    min_allowed_z  => {min_allowed_z},\n    max_allowed_z  => {max_allowed_z},\n    hover          => {hover},\n    max_failures   => {max_failures},\n    max_air_height => {max_air_height},\n    roam_min_delay => {roam_min_delay},\n    roam_max_delay => {roam_max_delay}\n);",
      "params": [
        {
          "name": "min_x",
          "label": "Min X",
          "type": "int",
          "default": -3100
        },
        {
          "name": "max_x",
          "label": "Max X",
          "type": "int",
          "default": 2675
        },
        {
          "name": "min_y",
          "label": "Min Y",
          "type": "int",
          "default": -2900
        },
        {
          "name": "max_y",
          "label": "Max Y",
          "type": "int",
          "default": 3046
        },
        {
          "name": "hole_min_x",
          "label": "Hole Min X",
          "type": "int",
          "default": -1525
        },
        {
          "name": "hole_max_x",
          "label": "Hole Max X",
          "type": "int",
          "default": 1780
        },
        {
          "name": "hole_min_y",
          "label": "Hole Min Y",
          "type": "int",
          "default": -1527
        },
        {
          "name": "hole_max_y",
          "label": "Hole Max Y",
          "type": "int",
          "default": 2184
        },
        {
          "name": "min_allowed_z",
          "label": "Min Z",
          "type": "int",
          "default": 10
        },
        {
          "name": "max_allowed_z",
          "label": "Max Z",
          "type": "int",
          "default": 1500
        },
        {
          "name": "hover",
          "label": "Hover Offset",
          "type": "int",
          "default": 2
        },
        {
          "name": "max_failures",
          "label": "Max Failures",
          "type": "int",
          "default": 5
        },
        {
          "name": "max_air_height",
          "label": "Max Air Height",
          "type": "int",
          "default": 5
        },
        {
          "name": "roam_min_delay",
          "label": "Min roam delay",
          "type": "int",
          "default": 5
        },
        {
          "name": "roam_max_delay",
          "label": "Max roam delay",
          "type": "int",
          "default": 30
        }
      ]
    },
    {
      "plugin_id": "hole_roamer_timer",
      "name": "Hole Roamer \u2013 Timer",
      "category": "Movement",
      "perl_template": "plugin::hole_roamer_timer($timer);",
      "params": []
    },
    {
      "plugin_id": "hole_roamer_cleanup",
      "name": "Hole Roamer \u2013 Cleanup",
      "category": "Movement",
      "perl_template": "plugin::hole_roamer_cleanup();",
      "params": []
    },
    {
      "plugin_id": "check_handin_normal",
      "name": "Handin \u2013 Normal (Legacy)",
      "category": "Handin",
      "perl_template": "my ($ok, $sets) = plugin::check_handin(\\%itemcount,\n{recipe}\n{strict_trade_line}{debug_line});\n\nif ($ok) {\n{body_on_success}\n} else {\n    plugin::return_items(\\%itemcount);\n}\n",
      "params": [
        {
          "name": "recipe",
          "label": "Recipe (Perl hash lines) \u2013 items/coins allowed",
          "type": "str",
          "default": "    1353 => 1,\n    2001 => 1\n"
        },
        {
          "name": "strict_trade_line",
          "label": "Strict Trade? (reject extra items/coins) (Perl line or blank)",
          "type": "str",
          "default": "    strict_trade => 0,\n"
        },
        {
          "name": "debug_line",
          "label": "Debug? (Perl line or blank)",
          "type": "str",
          "default": "    debug => 0\n"
        },
        {
          "name": "body_on_success",
          "label": "Body on success",
          "type": "str",
          "default": "    quest::say(\"Thanks!\");\n    # rewards here"
        }
      ]
    },
    {
      "plugin_id": "check_handin_exact_coin",
      "name": "Handin \u2013 Exact Coins (+ optional items)",
      "category": "Handin",
      "perl_template": "my ($ok, $sets) = plugin::check_handin(\\%itemcount,\n{recipe}\n    platinum => {pp},\n    gold     => {gp},\n    silver   => {sp},\n    copper   => {cp},\n{strict_trade_line}{debug_line});\n\nif ($ok) {\n{body_on_success}\n} else {\n    plugin::return_items(\\%itemcount);\n}\n",
      "params": [
        {
          "name": "recipe",
          "label": "Optional item requirements (Perl hash lines) OR blank",
          "type": "str",
          "default": "    # 1353 => 1,\n"
        },
        {
          "name": "pp",
          "label": "Platinum (exact)",
          "type": "int",
          "default": "0"
        },
        {
          "name": "gp",
          "label": "Gold (exact)",
          "type": "int",
          "default": "0"
        },
        {
          "name": "sp",
          "label": "Silver (exact)",
          "type": "int",
          "default": "0"
        },
        {
          "name": "cp",
          "label": "Copper (exact)",
          "type": "int",
          "default": "0"
        },
        {
          "name": "strict_trade_line",
          "label": "Strict Trade? (reject extra items/coins) (Perl line or blank)",
          "type": "str",
          "default": "    strict_trade => 0,\n"
        },
        {
          "name": "debug_line",
          "label": "Debug? (Perl line or blank)",
          "type": "str",
          "default": "    debug => 0\n"
        },
        {
          "name": "body_on_success",
          "label": "Body on success",
          "type": "str",
          "default": "    quest::say(\"Exact payment received.\");\n    # rewards here"
        }
      ]
    },
    {
      "plugin_id": "check_handin_coin_scale",
      "name": "Handin \u2013 Coin Scale (Sets by PP)",
      "category": "Handin",
      "perl_template": "my ($ok, $sets) = plugin::check_handin(\\%itemcount,\n    coin_scale => {pp_per_set},\n    no_items   => {no_items},\n    min_sets   => {min_sets},\n    max_sets   => {max_sets},\n{strict_trade_line}{debug_line});\n\nif ($ok) {\n{body_on_success}\n} else {\n    plugin::return_items(\\%itemcount);\n}\n",
      "params": [
        {
          "name": "pp_per_set",
          "label": "Platinum per set",
          "type": "int",
          "default": 50
        },
        {
          "name": "no_items",
          "label": "No Items? (1 = coins-only, default behavior)",
          "type": "int",
          "default": 1
        },
        {
          "name": "min_sets",
          "label": "Min sets",
          "type": "int",
          "default": 1
        },
        {
          "name": "max_sets",
          "label": "Max sets (safety cap)",
          "type": "int",
          "default": 10
        },
        {
          "name": "strict_trade_line",
          "label": "Strict Trade? (reject extra items/coins) (Perl line or blank)",
          "type": "str",
          "default": "    strict_trade => 0,\n"
        },
        {
          "name": "debug_line",
          "label": "Debug? (Perl line or blank)",
          "type": "str",
          "default": "    debug => 0\n"
        },
        {
          "name": "body_on_success",
          "label": "Body on success (use $sets)",
          "type": "str",
          "default": "    quest::say(\"OK, I counted $sets set(s).\");\n    # reward scale using $sets"
        }
      ]
    },
    {
      "plugin_id": "check_handin_item_scale_single",
      "name": "Handin \u2013 Item Scale (Single Item, req=1)",
      "category": "Handin",
      "perl_template": "my ($ok, $sets) = plugin::check_handin(\\%itemcount,\n    item_scale => 1,\n    {item_id} => 1,\n    max_sets  => {max_sets},\n{strict_trade_line}{debug_line});\n\nif ($ok) {\n{body_on_success}\n} else {\n    plugin::return_items(\\%itemcount);\n}\n",
      "params": [
        {
          "name": "item_id",
          "label": "Item ID (the only allowed item requirement)",
          "type": "int",
          "default": 1353
        },
        {
          "name": "max_sets",
          "label": "Max sets (safety cap)",
          "type": "int",
          "default": 10
        },
        {
          "name": "strict_trade_line",
          "label": "Strict Trade? (reject extra items/coins) (Perl line or blank)",
          "type": "str",
          "default": "    strict_trade => 1,\n"
        },
        {
          "name": "debug_line",
          "label": "Debug? (Perl line or blank)",
          "type": "str",
          "default": "    debug => 0\n"
        },
        {
          "name": "body_on_success",
          "label": "Body on success (use $sets)",
          "type": "str",
          "default": "    quest::say(\"You turned in $sets item(s).\");\n    # reward scale using $sets"
        }
      ]
    }
  ]
}